  <script>
    function sendMail(){
  var myHeaders = new Headers();
  myHeaders.append("Content-Type", "application/json");
  
  var eml = document.getElementById("cEml");
  var cxEmail = eml.value;
  var cxName =  document.getElementById("cName").value;
  var cxVMsg =  document.getElementById("cMsg").value;
  if (cxEmail == ""||cxName ==""|| cxVMsg ==""){
    alert ("All fields are Mandatory. Kindly fill and retry")
    return ;
  }
  if (!eml.checkValidity()){
    alert ("Invalid Email. Kindly check and retry")
    return ;
  }
  var data = JSON.stringify({
      "recieverAddress": [cxEmail],
      "messageBody": `Hello ${cxName}, <br><br> Thanks for reaching out. We understand that you have an enquiry regarding - ${cxVMsg}. <br><br>Kindly note that you will get a response from us as soon as possible.<br><br> Best Regards, <br>NuralTec Team`,
      "messageSubject": "Thanks for contacting NuralTec!"
  });
  var requestOptions = {
  method: 'POST',
  headers: myHeaders,
  body: data,
  redirect: 'follow'
  };
  fetch("https://tstfndr.herokuapp.com/mails/send", requestOptions)
  .then(response => response.text())
  .then(result => console.log(""))
  .catch(error => console.log('error', error));
  
  alert("Thanks for reaching out")
}
  </script>
